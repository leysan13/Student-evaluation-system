<Page x:Class="Sistema_osenivaniya_studentov_Shamazova.StudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sistema_osenivaniya_studentov_Shamazova"
      mc:Ignorable="d" 
      d:DesignHeight="400"
      Title="StudentsPage" Width="550">

    <Grid HorizontalAlignment="Left" Width="540" Height="400" VerticalAlignment="Top" Margin="10,0,0,0">
        <Image Source="/Images/albert.jpg" Margin="-368,0,-288,-282"></Image>
        <Label x:Name="StudentName" Content="Label" HorizontalAlignment="Left" Margin="62,91,0,0" VerticalAlignment="Top" Width="384" Foreground="#FFEAFF18" FontSize="16" FontFamily="Malgun Gothic Semilight">
            <Label.Background>
                <SolidColorBrush Color="#FFC3ABA0" Opacity="0.5"/>
            </Label.Background>
        </Label>
        <DataGrid x:Name="Datagrid" HorizontalAlignment="Center" Margin="62,162,158,179" VerticalAlignment="Center" Height="59" Width="320" IsEnabled="False" Opacity="0.8"/>
        <Button x:Name="Exit" Content="Выйти" HorizontalAlignment="Left" Margin="407,32,0,0" VerticalAlignment="Top" Width="75" Click="Exit_Click" IsDefault="True" IsCancel="True" MouseEnter="Exit_MouseEnter" MouseLeave="Exit_MouseLeave"/>
    </Grid>
</Page>
